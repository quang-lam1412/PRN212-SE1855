<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid RenderTransformOrigin="0.471,0.753">
            <Label Content="LoginScreen" HorizontalAlignment="Left" Margin="298,64,0,0" VerticalAlignment="Top" Height="52" Width="158" FontSize="24" Background="#FF0DE64E" Foreground="#FF172215"/>
            <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="189,287,0,0" VerticalAlignment="Top" Height="45" Width="79" FontSize="24" RenderTransformOrigin="0.62,1.934" Click="btnLogin_Click"/>
            <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="479,287,0,0" VerticalAlignment="Top" Height="45" Width="79" FontSize="24" Click="btnExit_Click"/>
            <Label Content="Username" HorizontalAlignment="Left" Margin="189,132,0,0" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="189,0,0,0" VerticalAlignment="Center" FontSize="20" RenderTransformOrigin="1.259,-2.704"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="316,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="122" Height="37" FontSize="20"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="316,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="122" Height="37" FontSize="20"/>
        </Grid>

    </Grid>
</Window>